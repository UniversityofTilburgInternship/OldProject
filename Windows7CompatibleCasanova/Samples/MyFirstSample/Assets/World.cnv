module Game

open "UnityEngine.dll"
open UnityEngine

worldEntity World = {
  Goblin : Goblin
  
  Create() =   
    { Goblin = new Goblin()  }  
}

entity Goblin = {
  inherit UnityGoblin
  
  rule Position = 
    wait Input.GetKey(KeyCode.Space)
    yield Position + new Vector3(dt*2.0f, 0.0f, 0.0f)

  Create() {
    UnityGoblin = UnityGoblin.Find()
  }

}




