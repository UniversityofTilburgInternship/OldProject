module Game

open "UnityEngine.dll"
open UnityEngine

worldEntity World = {
  Goblin   : Goblin
  

  Create() = 
    { Goblin = new Goblin()}  
}
  
entity Goblin = {
  inherit UnityGoblin
  big5personality : [int] 

  //moving right
  rule Position, IsMovingLegs =
    wait Input.GetKey(KeyCode.Space)
    yield Position + new Vector3(dt * 2.0f, 0.0f, 0.0f), true    

  //moving left
  rule Position, IsMovingLegs =
    wait Input.GetKey(KeyCode.C)
    yield Position - new Vector3(dt*2.0f, 0.0f, 0.0f), true
     
  Create() =  
    {
      big5personality = Big5Personality 
      UnityGoblin = UnityGoblin.Find()
      
    }
}  